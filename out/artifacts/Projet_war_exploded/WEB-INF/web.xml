<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>ch.hesge.library.Index</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>bookList</servlet-name>
        <servlet-class>ch.hesge.library.book.BookList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookList</servlet-name>
        <url-pattern>/bookList</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>newBook</servlet-name>
        <servlet-class>ch.hesge.library.book.NewBook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>newBook</servlet-name>
        <url-pattern>/secure/new</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>modifyBook</servlet-name>
        <servlet-class>ch.hesge.library.book.ModifyBook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>modifyBook</servlet-name>
        <url-pattern>/secure/modify</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>indexSecure</servlet-name>
        <servlet-class>ch.hesge.library.login.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>indexSecure</servlet-name>
        <url-pattern>/secure/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deconnexion</servlet-name>
        <servlet-class>ch.hesge.library.login.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deconnexion</servlet-name>
        <url-pattern>/secure/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteBook</servlet-name>
        <servlet-class>ch.hesge.library.book.DeleteBook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteBook</servlet-name>
        <url-pattern>/secure/delete</url-pattern>
    </servlet-mapping>

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/WEB-INF/connexion.jsp</form-login-page>
            <form-error-page>/WEB-INF/connexion.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <role-name>ADMIN</role-name>
    </security-role>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>partie_securise</web-resource-name>
            <url-pattern>/secure/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>